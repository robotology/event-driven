<application>
    <name>video to events simulator</name>

    <dependencies>
    </dependencies>

    <module>
        <name> esim-yarp </name>
        <parameters>--C 1e-2 --noise_variance 0.01 --refractory_period 0.01 --ts_noise_range 0.005</parameters>
        <node> localhost </node>
    </module>

    <module>
        <name> vFramerLite </name>
        <parameters> --displays "(/left (AE ISO))" --width 640 --height 480 </parameters>
        <node> localhost </node>
    </module>

    <module>
        <name> yarpview </name>
        <parameters>--name /viewCh0 --x 30 --y 30 --synch </parameters>
        <node> localhost </node>
    </module>

    <connection>
        <from>/icubSim/cam/left</from>
        <to>/esim-yarp/image:i</to>
        <protocol> fast_tcp </protocol>
    </connection>

    <connection>
        <from>/esim-yarp/AE:o</from>
        <to>/vFramer/left/AE:i</to>
        <protocol> fast_tcp </protocol>
    </connection>

    <connection>
        <from>/vFramer/left/image:o</from>
        <to>/viewCh0</to>
        <protocol>fast_tcp</protocol>
    </connection>

</application>
